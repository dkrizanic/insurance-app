<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Insurance Portal</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/css/bootstrap.min.css" />
    
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-controller="Partners" asp-action="Index"><i class="fas fa-shield-alt mr-2"></i>Insurance Portal</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Partners" asp-action="Index">
                                <i class="fas fa-users mr-2"></i>Partners
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container text-center">
            <p class="text-muted mb-0">
                &copy; 2025 Insurance Portal
            </p>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/js/bootstrap.min.js"></script>
    
    <script>
        // Auto-dismiss Bootstrap alerts after a short delay and ensure the close button works reliably
        (function () {
            // Close on X click (defensive in case data-dismiss binding fails)
            $(document).on('click', '.alert .close', function () {
                $(this).closest('.alert').alert('close');
            });

            // Auto hide after 4 seconds with a smooth fade + slide
            $(function () {
                window.setTimeout(function () {
                    $('.alert-dismissible.auto-hide, .alert-dismissible').each(function () {
                        var $a = $(this);
                        // skip if already closed or explicitly marked to persist
                        if ($a.hasClass('persist')) return;
                        $a.fadeTo(300, 0).slideUp(300, function () {
                            $a.alert('close');
                        });
                    });
                }, 4000);
            });
        })();
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>