@model IEnumerable<InsuranceApp.Models.ViewModels.PartnerListViewModel>

@{
    ViewData["Title"] = "Insurance Partners";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-4 mb-2">
                        <i class="fas fa-users text-primary"></i> Insurance Partners
                    </h1>
                    <p class="text-muted">Manage your insurance partners and their policies</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary btn-lg shadow">
                        <i class="fas fa-user-plus"></i> Add New Partner
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <strong><i class="fas fa-check-circle mr-2"></i>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary text-white rounded-circle p-3">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Partners</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success text-white rounded-circle p-3">
                                <i class="fas fa-file-contract fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Policies</h6>
                            <h3 class="mb-0">@Model.Sum(p => p.PolicyCount)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info text-white rounded-circle p-3">
                                <i class="fas fa-euro-sign fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Value</h6>
                            <h3 class="mb-0">@Model.Sum(p => p.TotalPolicyAmount).ToString("C")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Partners Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0"><i class="fas fa-list"></i> Partners List</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0">Partner</th>
                            <th class="border-0">Partner Number</th>
                            <th class="border-0">Croatian PIN</th>
                            <th class="border-0">Type</th>
                            <th class="border-0">Gender</th>
                            <th class="border-0 text-center">Status</th>
                            <th class="border-0 text-center">Policies</th>
                            <th class="border-0 text-end">Total Amount</th>
                            <th class="border-0 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(TempData["NewPartnerId"]?.ToString() == item.Id.ToString() ? "table-success" : "")">
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        @if (item.RequiresHighlight)
                                        {
                                            <span class="badge badge-warning me-2" title="High Value Partner">
                                                <i class="fas fa-star"></i>
                                            </span>
                                        }
                                        <div>
                                            <strong>@item.FullName</strong>
                                            <br/>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar-alt"></i> 
                                                Joined @item.CreatedAtUtc.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <code>@item.PartnerNumber</code>
                                </td>
                                <td class="align-middle">
                                    @if (!string.IsNullOrEmpty(item.CroatianPIN))
                                    {
                                        <code>@item.CroatianPIN</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (item.PartnerTypeId.ToString() == "Individual")
                                    {
                                        <span class="badge badge-primary">
                                            <i class="fas fa-user"></i> Individual
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info">
                                            <i class="fas fa-building"></i> Company
                                        </span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (item.Gender.ToString() == "Male")
                                    {
                                        <i class="fas fa-mars text-primary"></i>
                                    }
                                    else if (item.Gender.ToString() == "Female")
                                    {
                                        <i class="fas fa-venus text-danger"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-genderless text-secondary"></i>
                                    }
                                    @item.Gender.ToString()
                                </td>
                                <td class="align-middle text-center">
                                    @if (item.IsForeign)
                                    {
                                        <span class="badge badge-secondary">
                                            <i class="fas fa-globe"></i> Foreign
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-home"></i> Domestic
                                        </span>
                                    }
                                </td>
                                <td class="align-middle text-center">
                                    <span class="badge badge-pill @(item.PolicyCount > 5 ? "badge-warning" : "badge-secondary")">
                                        @item.PolicyCount
                                    </span>
                                </td>
                                <td class="align-middle text-end">
                                    <strong class="@(item.TotalPolicyAmount > 5000 ? "text-warning" : "")">
                                        @item.TotalPolicyAmount.ToString("C")
                                    </strong>
                                </td>
                                <td class="align-middle text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="AddPolicy" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" title="Add Policy">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>