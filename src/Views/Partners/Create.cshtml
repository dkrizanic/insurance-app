@model InsuranceApp.Models.Partner

@{
    ViewData["Title"] = "Create New Partner";
}

<div class="form-centered">
    <!-- Header -->
    <div class="mb-4 text-center">
        <h1 class="display-5">
            <i class="fas fa-user-plus text-primary"></i> Create New Partner
        </h1>
        <p class="text-muted">Add a new insurance partner to the system</p>
    </div>

            <!-- Form Card -->
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-wpforms"></i> Partner Information</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Personal Information Section -->
                        <h6 class="text-muted mb-3 border-bottom pb-2">
                            <i class="fas fa-user"></i> Personal Information
                        </h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                </div>
                                <input asp-for="Address" class="form-control" placeholder="Enter full address" />
                            </div>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                    </div>
                                    <select asp-for="Gender" class="form-control">
                                        <option value="">-- Select Gender --</option>
                                        <option value="M">Male</option>
                                        <option value="F">Female</option>
                                        <option value="N">Not Specified</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CreateByUser" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    <input asp-for="CreateByUser" class="form-control" type="email" placeholder="user@example.com" />
                                </div>
                                <span asp-validation-for="CreateByUser" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Partner Details Section -->
                        <h6 class="text-muted mb-3 mt-4 border-bottom pb-2">
                            <i class="fas fa-id-card"></i> Partner Details
                        </h6>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PartnerNumber" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                                    </div>
                                    <input asp-for="PartnerNumber" class="form-control" placeholder="20 digits" maxlength="20" />
                                </div>
                                <small class="form-text text-muted">Must be exactly 20 digits</small>
                                <span asp-validation-for="PartnerNumber" class="text-danger small d-block"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CroatianPIN" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-fingerprint"></i></span>
                                    </div>
                                    <input asp-for="CroatianPIN" class="form-control" placeholder="11 digits (optional)" maxlength="11" />
                                </div>
                                <small class="form-text text-muted">11 digits, optional</small>
                                <span asp-validation-for="CroatianPIN" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PartnerTypeId" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-building"></i></span>
                                    </div>
                                    <select asp-for="PartnerTypeId" asp-items="Html.GetEnumSelectList<InsuranceApp.Models.Enums.PartnerType>()" class="form-control">
                                        <option value="">-- Select Partner Type --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="PartnerTypeId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ExternalCode" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    </div>
                                    <input asp-for="ExternalCode" class="form-control" placeholder="10-20 characters" />
                                </div>
                                <small class="form-text text-muted">Unique code, 10-20 characters</small>
                                <span asp-validation-for="ExternalCode" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="custom-control custom-switch custom-switch-lg">
                                <input type="checkbox" class="custom-control-input" asp-for="IsForeign" id="isForeignSwitch" />
                                <label class="custom-control-label" for="isForeignSwitch">
                                    <i class="fas fa-globe"></i> @Html.DisplayNameFor(model => model.IsForeign)
                                </label>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="border-top pt-4 mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-save"></i> Create Partner
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 mb-5 text-center">
                <a asp-action="Index" class="btn btn-link">
                    <i class="fas fa-arrow-left"></i> Back to Partners List
                </a>
            </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            // Add client-side validation for PartnerNumber (20 digits)
            $('#PartnerNumber').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            // Add client-side validation for CroatianPIN (11 digits)
            $('#CroatianPIN').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });
        });
    </script>
}