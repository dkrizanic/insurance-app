@model InsuranceApp.Models.ViewModels.PolicyViewModel

@{
    ViewData["Title"] = "Add Policy";
}

<div class="container py-4" style="max-width: 900px; margin: 0 auto;">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="mb-4">
                <h1 class="display-5">
                    <i class="fas fa-file-contract text-success"></i> Add New Policy
                </h1>
                <p class="text-muted">Add a new insurance policy for the selected partner</p>
            </div>

            <!-- Partner Info Alert -->
            <div class="alert alert-info border-0 shadow-sm mb-4">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-user-circle fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-0">Adding policy for:</h6>
                        <strong class="h5 mb-0">@Model.PartnerName</strong>
                    </div>
                </div>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-file-invoice-dollar"></i> Policy Details</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddPolicy" method="post">
                        <input type="hidden" asp-for="PartnerId" />
                        <input type="hidden" asp-for="PartnerName" />

                        <div class="mb-4">
                            <label asp-for="PolicyNumber" class="form-label fw-bold"></label>
                            <div class="input-group input-group-lg">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-hashtag"></i>
                                    </span>
                                </div>
                                <input asp-for="PolicyNumber" class="form-control" placeholder="Enter unique policy number" />
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i> Policy number must be unique and between 10-15 characters.
                            </small>
                            <span asp-validation-for="PolicyNumber" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Amount" class="form-label fw-bold"></label>
                            <div class="input-group input-group-lg">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-light">
                                        <i class="fas fa-euro-sign"></i>
                                    </span>
                                </div>
                                <input asp-for="Amount" class="form-control" placeholder="0.00" step="0.01" />
                                <div class="input-group-append">
                                    <span class="input-group-text bg-light">EUR</span>
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i> Amount must be greater than 0.
                            </small>
                            <span asp-validation-for="Amount" class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- Info Box -->
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-lightbulb"></i> Important Information
                                </h6>
                                <ul class="mb-0 small">
                                    <li>Partners with more than 5 policies will be highlighted</li>
                                    <li>Partners with total policy amount over â‚¬5,000 will be highlighted</li>
                                    <li>All policy numbers must be unique across the system</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="border-top pt-4">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="fas fa-save"></i> Add Policy
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-link">
                    <i class="fas fa-arrow-left"></i> Back to Partners List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
